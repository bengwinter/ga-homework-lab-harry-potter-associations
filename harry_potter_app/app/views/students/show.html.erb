<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @student.first_name + " " + @student.last_name %>
</p>

<p>
  <strong>Year:</strong>
  <%= @student.grade %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @student.gender %>
</p>

<p>
  <strong>House:</strong>
  <%= @student.house.name %>
</p>

<p>
  <strong>Image:</strong>
  <%= @student.image %>
</p>

<p>
  <strong>Spells:</strong></br>
  <% @student.student_skills.each do |skill| %>
  <% @spellid = skill.spell_id %>
  <%= Spell.find(@spellid).name %>,
  Level: <%= skill.level %></br>
  <% end %>
</p>

<%= link_to 'Edit', edit_student_path(@student) %> |
<%= link_to 'Back', students_path %>
