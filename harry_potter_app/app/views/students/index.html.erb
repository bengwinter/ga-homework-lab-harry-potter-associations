<h1>Listing Students</h1>

<% @students.each do |student| %>
  <hr>First Name: <%= student.first_name %><br>
  Last Name: <%= student.last_name %><br>
  Year: <%= student.grade %><br>
  Gender: <%= student.gender %>
  House: <%= student.house.name %>
  Image: <img src="<%= student.image %>" width: 100px/>
  <%= link_to 'Show', student %>
  <%= link_to 'Edit', edit_student_path(movie) %>
  <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<br>

<%= link_to 'New Student', new_student_path %>
